<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="8dp">
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="wrap_content" android:text="User Name"/>
    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="0dp" android:layout_weight="2"
        android:layout_height="wrap_content" android:text="user@kiit.ac.in"/>
    <TextView
        android:id="@+id/tvUserStatus"
        android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="wrap_content" android:text="ACTIVE"/>
    <Button
        android:id="@+id/btnBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ban"/>
    <Button
        android:id="@+id/btnUnban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unban"/>
</LinearLayout>