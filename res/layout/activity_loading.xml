<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/splash_gradient">
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/logo_c"
        android:contentDescription="App Logo"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/appNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:background="@drawable/logo_circle_bg"
        android:elevation="8dp"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:letterSpacing="0.1"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:text="Welcome to KIIT ChatApp"
        android:textColor="@color/green"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/border_line"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep it clean and respectful"
        android:layout_marginBottom="50dp"
        android:letterSpacing="0.1"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="8"
        android:textColor="@color/green"
        android:textStyle="italic"
        android:textSize="18sp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logging you in..."
        android:textColor="@color/green"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />
</LinearLayout>
